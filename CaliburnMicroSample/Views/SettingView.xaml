<Page x:Class="CaliburnMicroSample.Views.SettingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:cal="http://www.caliburnproject.org"
      xmlns:v="clr-namespace:CaliburnMicroSample.Views"
      xmlns:vm="clr-namespace:CaliburnMicroSample.ViewModels"
      mc:Ignorable="d" 
      d:DesignWidth="800"
      d:DesignHeight="450"
      d:DataContext="{d:DesignInstance Type={x:Type vm:SettingViewModel}, IsDesignTimeCreatable=True}"
      cal:Bind.AtDesignTime="True">

    <!-- Design Time Support -->
    
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="2">
                <TextBlock Text="{DynamicResource LangSetting}" />
                <ComboBox x:Name="Languages" />
            </StackPanel>
            <Button x:Name="MessageToShell" 
                    Content="{DynamicResource SendMessage}" 
                    Margin="2" />
        </StackPanel>
    </Grid>
</Page>
